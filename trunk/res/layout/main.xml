<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/top_layout">
	<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#7f7f00" android:id="@+id/map_view_layout"></RelativeLayout>
	<ScrollView android:layout_alignParentTop="true" android:layout_height="150dip" android:layout_width="wrap_content" android:layout_alignParentRight="true">
		<RadioGroup android:layout_height="wrap_content" android:layout_width="100dip" android:orientation="vertical" android:id="@+id/size_selector">
			<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1x1" android:id="@+id/id1x1" android:textColor="#000" android:checked="true" android:tag="1"></RadioButton>
			<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2x1" android:id="@+id/id2x1" android:textColor="#000" android:tag="2"></RadioButton>
			<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2x2" android:id="@+id/id2x2" android:textColor="#000" android:tag="3"></RadioButton>
			<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4x2" android:id="@+id/id4x2" android:textColor="#000" android:tag="4"></RadioButton>
			
		</RadioGroup>
	</ScrollView>
	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:text="Add Widget" android:id="@+id/add_button"></Button>
	<ZoomControls android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:id="@+id/zoom_control"></ZoomControls>
	<CheckBox android:layout_above="@+id/zoom_control" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/follow_me" android:text="Follow Me" android:textColor="#000000" android:layout_alignParentRight="true"></CheckBox>
</RelativeLayout>
